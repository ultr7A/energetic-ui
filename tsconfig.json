{
    "compilerOptions": {
      "outDir": "./lib",
      "target": "es5",
      "module": "commonjs",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": true,
      "declaration": true,
      "sourceMap": true,
      "jsx": "react"
    },
    "include": [
      "./src/**/*.tsx",
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "lib"
    ]
  }